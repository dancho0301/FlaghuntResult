%h1 <%= plural_table_name %>一覧

%table
  %thead
    %tr
<% for attribute in attributes -%>
      %th <%= attribute.human_name %>
<% end -%>
      %th
      %th
      %th

  %tbody
    - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
      %tr
<% for attribute in attributes -%>
        %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
        %td= link_to '参照', <%= singular_table_name %>
        %td= link_to '変更', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-primary'
        %td= link_to '削除', <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to '新規登録', new_<%= singular_table_name %>_path, class: 'btn btn-primary'
